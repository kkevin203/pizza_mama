@page
@using pizza_mama.Models;
@model pizza_mama.Pages.MenuPizzasModel
@{
}

<html>
    <head>
    <link rel="stylesheet" href="~/css/Style.css" />
    <title>Menu des Pizzas</title>
    </head>
    <body>
    <a asp-page="index">
        <img src="~/images/small_logo.png"  id="small-logo" />
    </a>
    <div class="menu_title">
    <h1>Les Pizzas</h1>
    </div>
    <div class="menu-list">
    @foreach (var pizza in Model.Pizza)
    {
        <div class="menu-list-item">
            <span class="menu-list-title">@pizza.Name</span>
                <span class="menu-list-price">@string.Format("{0:0.00}", pizza.Price)€</span>
            <br/>
            <span class="menu-list-ingredient">@pizza.Ingredient</span>
                @if(pizza.Vegetarian == true)
                {
                <span class="menu-list-vegetarienne">VEGETARIENNE</span>
                }

        </div>
 
    } 
    </div>
</body>
</html>
